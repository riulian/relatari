<p id="notice"><%= notice %></p>

<h1>Teme spirituale</h1>

<table class='table table-striped table-bordered table-hover'>
  <thead class="table-dark">
    <tr>
      <th>Denumire</th>
      <th>Despre</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @temes.each do |teme| %>
      <tr>
        <td><%= teme.denumire %></td>
        <td><%= teme.despre %></td>
        <%if user_signed_in? && current_user.role=='admin'%>
        <td><%= link_to 'Show', teme %></td>
        <td><%= link_to 'Edit', edit_teme_path(teme) %></td>
        <td><%= link_to 'Destroy', teme, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <%end%>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<%if user_signed_in? && current_user.role=='admin'%>
<%= link_to 'Adauga o tema noua', new_teme_path,class:"btn btn-dark" %>
<%end%>