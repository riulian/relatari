

<table style="border-radius: 25px;" id="dtBasicExample" class="table table-striped table-bordered table-sm" cellspacing="0" width="100%">
  <thead class="table-dark">
    <tr>
      <th style="font-family: Verdana;font-size:120%;letter-spacing: 3px;text-align: center;">Text in limba romana</th>
      <th style="font-family: Verdana;font-size:120%;letter-spacing: 3px;text-align: center;">&nbsp&nbsp&nbsp&nbspText in English&nbsp&nbsp&nbsp&nbsp</th>
      <th style="font-family: Verdana;font-size:120%;letter-spacing: 3px;text-align: center;">Tema</th>
      <th style="font-family: Verdana;font-size:120%;letter-spacing: 3px;text-align: center;">Autor</th>
    </tr>
  </thead>

  <tbody>
    <% @relatares.each do |relatare| %>
      <tr>
        <td style="font-family: Times;font-size:100%;"><%= relatare.textro.first(50) %></td>
        <td style="font-family: Times;font-size:100%;"><%= relatare.texten.first(50) %></td>
        <%if relatare.teme_id!=nil%>
        <td style="font-family: Times;font-size:100%;"><%= relatare.teme.denumire %></td>
        <%else%>
        <td style="font-family: Times;font-size:100%;"> </td>
        <%end%>
        <%if relatare.user_id!=nil%>
        <td style="font-family: Times;font-size:100%;"><%= relatare.user.email %></td>
        <%else%>
        <td style="font-family: Times;font-size:100%;"> </td>
        <%end%>
        <td style="font-family: Verdana;font-size:100%;letter-spacing: 3px;text-align: center;"><%= link_to 'Show', relatare %></td>
        <td style="font-family: Verdana;font-size:100%;letter-spacing: 3px;text-align: center;"><%= link_to 'Edit', edit_relatare_path(relatare) %></td>
        <td style="font-family: Verdana;font-size:100%;letter-spacing: 3px;text-align: center;"><%= link_to 'Destroy', relatare, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
